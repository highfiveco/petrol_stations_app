<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layoutDirection="rtl"
    app:cardCornerRadius="@dimen/_20sdp"
    app:cardBackgroundColor="#F9F9FB">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Row 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="16dp"
                android:gravity="center|right"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:src="@drawable/ic_invoice_number"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_invoice_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:fontFamily="@font/din_regular"
                    android:includeFontPadding="false"
                    android:textColor="#6D707C"
                    android:textSize="16sp"
                    android:text="@string/invoice_number"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="center|right"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:src="@drawable/ic_invoice_date"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_invoice_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:fontFamily="@font/din_regular"
                    android:includeFontPadding="false"
                    android:textColor="#6D707C"
                    android:textSize="15sp"
                    android:text="@string/invoice_date"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E3E3E5"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/txt_status_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="16dp"
                android:visibility="gone"
                android:gravity="center|right"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:src="@drawable/ic_invoice_number"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/din_regular"
                    android:textSize="12sp"
                    android:textColor="#D32F2F"

                    android:text="Pending"/>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E3E3E5"/>

        <!-- Row 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Customer name row (hide when customer mode) -->
            <LinearLayout
                android:id="@+id/customer_name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="16dp"
                android:gravity="center|right"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:src="@drawable/ic_invoice_customer"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_customer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:fontFamily="@font/din_regular"
                    android:includeFontPadding="false"
                    android:textColor="#6D707C"
                    android:textSize="16sp"
                    android:text="@string/customer_name"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="16dp"
                android:gravity="center|right"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:src="@drawable/ic_invoice_amount"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_invoice_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:fontFamily="@font/din_regular"
                    android:includeFontPadding="false"
                    android:textColor="#6D707C"
                    android:textSize="16sp"
                    android:text="@string/invoice_amount"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E3E3E5"/>

        <!-- Row 3 actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/view_invoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="16dp"
                android:gravity="center|right"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:src="@drawable/ic_invoice_view"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:fontFamily="@font/din_regular"
                    android:includeFontPadding="false"
                    android:textColor="#6D707C"
                    android:textSize="16sp"
                    android:text="@string/invoice_view"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/print_invoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="16dp"
                android:gravity="center|right"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:src="@drawable/ic_invoice_print"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:fontFamily="@font/din_regular"
                    android:includeFontPadding="false"
                    android:textColor="#6D707C"
                    android:textSize="16sp"
                    android:text="@string/invoice_print"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
