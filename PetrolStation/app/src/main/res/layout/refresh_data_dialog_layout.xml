<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    android:paddingRight="8dp"
    android:paddingLeft="8dp"
    android:paddingBottom="8dp"
    android:background="@drawable/dialog_background_inset">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_margin="16dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/refresh_data"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:textColor="#5608F3"
            android:fontFamily="@font/din_medium"/>



    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">


                <com.tuyenmonkey.mkloader.MKLoader
                    android:id="@+id/loader_update_setting"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:mk_type="Whirlpool"
                    android:layout_marginRight="16dp"
                    app:mk_color="#000000"
                    />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ic_update_setting"
                    android:layout_width="20dp"
                    android:layout_marginRight="16dp"
                    android:layout_height="20dp"
                    android:scaleType="center"
                    android:visibility="gone"
                    android:background="@drawable/ic_true"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/update_setting"
                    android:textSize="16sp"
                    android:textColor="#1F1F39"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:fontFamily="@font/din_medium"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.tuyenmonkey.mkloader.MKLoader
                    android:id="@+id/loader_update_company_setting"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:mk_type="Whirlpool"
                    android:layout_marginRight="16dp"
                    android:visibility="invisible"
                    app:mk_color="#000000"
                    />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ic_update_company_setting"
                    android:layout_width="20dp"
                    android:layout_marginRight="16dp"
                    android:layout_height="20dp"
                    android:visibility="gone"
                    android:scaleType="center"
                    android:background="@drawable/ic_true"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/update_company_setting"
                    android:textSize="16sp"
                    android:textColor="#1F1F39"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:fontFamily="@font/din_medium"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.tuyenmonkey.mkloader.MKLoader
                    android:id="@+id/loader_update_customers"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:mk_type="Whirlpool"
                    android:layout_marginRight="16dp"
                    android:visibility="invisible"
                    app:mk_color="#000000"
                    />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ic_update_customers"
                    android:layout_width="20dp"
                    android:layout_marginRight="16dp"
                    android:layout_height="20dp"
                    android:scaleType="center"
                    android:visibility="gone"
                    android:background="@drawable/ic_true"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/update_customers"
                    android:textSize="16sp"
                    android:textColor="#1F1F39"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:fontFamily="@font/din_medium"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.tuyenmonkey.mkloader.MKLoader
                    android:id="@+id/loader_update_items"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:mk_type="Whirlpool"
                    android:layout_marginRight="16dp"
                    android:visibility="invisible"
                    app:mk_color="#000000"
                    />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ic_update_items"
                    android:layout_width="20dp"
                    android:layout_marginRight="16dp"
                    android:layout_height="20dp"
                    android:scaleType="center"
                    android:visibility="gone"
                    android:background="@drawable/ic_true"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/update_items"
                    android:textSize="16sp"
                    android:textColor="#1F1F39"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:fontFamily="@font/din_medium"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="26dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="26dp"
                android:layout_marginLeft="16dp">


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/close"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_button"
                    android:padding="10dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="40dp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:enabled="false"
                    android:alpha="0.5"
                    android:fontFamily="@font/din_medium"
                    android:textSize="15sp"
                    android:text="@string/close"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>