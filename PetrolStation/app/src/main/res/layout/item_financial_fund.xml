<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_20sdp"
    android:layout_margin="10dp"
    android:layoutDirection="rtl"
    app:cardBackgroundColor="#F9F9FB">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center|right"
                android:layout_weight="1"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="10dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:src="@drawable/ic_customer_name"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(102) محمد بركات"
                    android:layout_marginRight="16dp"
                    android:fontFamily="@font/din_regular"
                    android:textSize="16sp"
                    android:textColor="#6D707C"
                    android:includeFontPadding="false"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center|right"
                android:layout_weight="1"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="10dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:src="@drawable/ic_currency"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/currency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/currency"
                    android:layout_marginRight="16dp"
                    android:fontFamily="@font/din_regular"
                    android:textSize="15sp"
                    android:textColor="#6D707C"
                    android:includeFontPadding="false"/>
            </LinearLayout>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E3E3E5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center|right"
                android:layout_weight="1"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="10dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:src="@drawable/ic_open_fund_date"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/fund_open_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fund_open_date"
                    android:layout_marginRight="16dp"
                    android:fontFamily="@font/din_regular"
                    android:textSize="16sp"
                    android:textColor="#6D707C"
                    android:includeFontPadding="false"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center|right"
                android:layout_weight="1"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="10dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:src="@drawable/ic_close_fund_date"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/fund_close_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fund_close_date"
                    android:layout_marginRight="16dp"
                    android:fontFamily="@font/din_regular"
                    android:textSize="15sp"
                    android:textColor="#6D707C"
                    android:includeFontPadding="false"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E3E3E5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center|right"
                android:layout_weight="1"
                android:layout_margin="16dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:src="@drawable/ic_total_incom"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/total_revenue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total_revenue"
                    android:lineSpacingExtra="5dp"
                    android:layout_marginRight="16dp"
                    android:fontFamily="@font/din_regular"
                    android:textSize="16sp"
                    android:textColor="#6D707C"
                    android:includeFontPadding="false"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/view_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center|right"
                android:layout_weight="1"
                android:layout_margin="16dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:src="@drawable/ic_total_expenses"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/total_expenses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total_expenses"
                    android:lineSpacingExtra="5dp"
                    android:layout_marginRight="16dp"
                    android:fontFamily="@font/din_regular"
                    android:textSize="16sp"
                    android:textColor="#6D707C"
                    android:includeFontPadding="false"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E3E3E5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center|right"
                android:layout_weight="1"
                android:layout_margin="16dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:src="@drawable/ic_total_burble"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total"
                    android:lineSpacingExtra="5dp"
                    android:layout_marginRight="16dp"
                    android:fontFamily="@font/din_regular"
                    android:textSize="16sp"
                    android:textColor="#6D707C"
                    android:includeFontPadding="false"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/receive_money_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center|right"
                android:layout_weight="1"
                android:layout_margin="16dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:src="@drawable/ic_received_money"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/received_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/received_money"
                    android:lineSpacingExtra="5dp"
                    android:layout_marginRight="16dp"
                    android:fontFamily="@font/din_regular"
                    android:textSize="16sp"
                    android:textColor="#6D707C"
                    android:includeFontPadding="false"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E3E3E5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/report_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center|right"
                android:layout_weight="1"
                android:layout_margin="16dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:src="@drawable/ic_report"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/report"
                    android:layout_marginRight="16dp"
                    android:fontFamily="@font/din_regular"
                    android:textSize="16sp"
                    android:textColor="#6D707C"
                    android:includeFontPadding="false"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/close_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center|right"
                android:layout_weight="1"
                android:layout_margin="16dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:src="@drawable/ic_close_funds"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/close"
                    android:layout_marginRight="16dp"
                    android:fontFamily="@font/din_regular"
                    android:textSize="16sp"
                    android:textColor="#6D707C"
                    android:includeFontPadding="false"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>