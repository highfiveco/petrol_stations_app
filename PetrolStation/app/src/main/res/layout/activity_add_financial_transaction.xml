<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:src="@drawable/header_bg"
            android:scaleType="fitXY"/>

        <RelativeLayout
            android:id="@+id/icons_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="26dp"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="26dp" >


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_customer_payment"
                android:fontFamily="@font/din_regular"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:includeFontPadding="false"
                android:textColor="@color/white"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true">

                <RelativeLayout
                    android:id="@+id/ic_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:padding="8dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_home"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/ic_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:padding="8dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_back_white"/>

                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/icons_layout">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:gravity="center|right">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="19dp"
                            android:layout_height="19dp"
                            android:src="@drawable/ic_username_blue"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#1F1F39"
                            android:layout_marginRight="10dp"
                            android:textSize="20sp"
                            android:fontFamily="@font/din_regular"
                            android:includeFontPadding="false"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:gravity="center|right">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="19dp"
                            android:layout_height="19dp"
                            android:src="@drawable/ic_phone_green"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#1F1F39"
                            android:layout_marginRight="10dp"
                            android:textSize="20sp"
                            android:fontFamily="@font/din_regular"
                            android:includeFontPadding="false"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"

                        android:gravity="center|right">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="19dp"
                            android:layout_height="19dp"
                            android:src="@drawable/ic_currency_yellow"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/currency"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#1F1F39"
                            android:layout_marginRight="10dp"
                            android:textSize="20sp"
                            android:fontFamily="@font/din_regular"
                            android:includeFontPadding="false"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:gravity="center|right">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="19dp"
                            android:layout_height="19dp"
                            android:src="@drawable/ic_account_type_red"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/account_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#1F1F39"
                            android:layout_marginRight="10dp"
                            android:textSize="20sp"
                            android:fontFamily="@font/din_regular"
                            android:includeFontPadding="false"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/previous_readings"
                android:textColor="#1F1F39"
                android:layout_marginTop="20dp"
                android:textSize="16sp"
                android:fontFamily="@font/din_regular"
                android:includeFontPadding="false"/>

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/add_transaction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/din_regular"
                    android:textSize="14sp"
                    android:checked="true"
                    android:includeFontPadding="false"
                    android:text="@string/add_transaction"/>

                <RadioButton
                    android:id="@+id/load_transaction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/din_regular"
                    android:textSize="14sp"
                    android:layout_marginRight="5dp"
                    android:includeFontPadding="false"
                    android:text="@string/laod_transaction"/>

                <RadioButton
                    android:id="@+id/discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:fontFamily="@font/din_regular"
                    android:textSize="14sp"
                    android:includeFontPadding="false"
                    android:text="@string/discount"/>
            </RadioGroup>

            <LinearLayout
                android:id="@+id/payment_method_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/payment_method"
                    android:textSize="16sp"
                    android:textColor="#1F1F39"
                    android:fontFamily="@font/din_medium"/>

                <RelativeLayout
                    android:id="@+id/payment_method_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_gray_light_bg"
                    android:layout_marginTop="16dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/payment_method"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:padding="16dp"
                        android:text="@string/payment_method"
                        android:fontFamily="@font/din_regular"
                        android:includeFontPadding="false"
                        android:gravity="right"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@+id/ic_payment_method"
                        android:background="@null"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ic_payment_method"
                        android:layout_width="8dp"
                        android:layout_height="4dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:src="@drawable/ic_down_arrow_blue"/>


                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/check_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/check_number"
                    android:textSize="16sp"
                    android:textColor="#1F1F39"
                    android:fontFamily="@font/din_medium"/>

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/check_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="20dp"
                    android:fontFamily="@font/din_regular"
                    android:includeFontPadding="false"
                    android:background="@drawable/edittext_gray_light_bg"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/bank_date_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bank"
                        android:textSize="16sp"
                        android:textColor="#1F1F39"
                        android:fontFamily="@font/din_medium"/>

                    <RelativeLayout
                        android:id="@+id/bank_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_gray_light_bg"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/bank"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:padding="16dp"
                            android:text="@string/bank"
                            android:fontFamily="@font/din_regular"
                            android:includeFontPadding="false"
                            android:gravity="right"
                            android:layout_marginLeft="16dp"
                            android:layout_toRightOf="@+id/ic_bank"
                            android:background="@null"/>

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ic_bank"
                            android:layout_width="8dp"
                            android:layout_height="4dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="16dp"
                            android:src="@drawable/ic_down_arrow_blue"/>


                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/due_date"
                        android:textSize="16sp"
                        android:textColor="#1F1F39"
                        android:fontFamily="@font/din_medium"/>

                    <RelativeLayout
                        android:id="@+id/due_date_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_gray_light_bg"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/due_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:padding="16dp"
                            android:text="@string/due_date"
                            android:fontFamily="@font/din_regular"
                            android:includeFontPadding="false"
                            android:gravity="right"
                            android:layout_marginLeft="16dp"
                            android:layout_toRightOf="@+id/ic_due_date"
                            android:background="@null"/>

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ic_due_date"
                            android:layout_width="8dp"
                            android:layout_height="4dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="16dp"
                            android:src="@drawable/ic_down_arrow_blue"/>


                    </RelativeLayout>

                </LinearLayout>




            </LinearLayout>

            <LinearLayout
                android:id="@+id/statement_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/statement"
                    android:textSize="16sp"
                    android:textColor="#1F1F39"
                    android:fontFamily="@font/din_medium"/>

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/statement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="20dp"
                    android:fontFamily="@font/din_regular"
                    android:includeFontPadding="false"
                    android:background="@drawable/edittext_gray_light_bg"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/amount"
                        android:textSize="16sp"
                        android:textColor="#1F1F39"
                        android:fontFamily="@font/din_medium"/>

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:padding="20dp"
                        android:inputType="number"
                        android:fontFamily="@font/din_regular"
                        android:includeFontPadding="false"
                        android:background="@drawable/edittext_gray_light_bg"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/currency"
                        android:textSize="16sp"
                        android:textColor="#1F1F39"
                        android:fontFamily="@font/din_medium"/>

                    <RelativeLayout
                        android:id="@+id/currency_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_gray_light_bg"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/currency_edit_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:padding="16dp"
                            android:text="@string/currency"
                            android:fontFamily="@font/din_regular"
                            android:includeFontPadding="false"
                            android:gravity="right"
                            android:layout_marginLeft="16dp"
                            android:layout_toRightOf="@+id/ic_show_password"
                            android:background="@null"/>

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ic_show_password"
                            android:layout_width="8dp"
                            android:layout_height="4dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="16dp"
                            android:src="@drawable/ic_down_arrow_blue"/>


                    </RelativeLayout>

                </LinearLayout>




            </LinearLayout>

            <LinearLayout
                android:id="@+id/date_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/date"
                    android:textSize="16sp"
                    android:textColor="#1F1F39"
                    android:fontFamily="@font/din_medium"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="20dp"
                    android:fontFamily="@font/din_regular"
                    android:includeFontPadding="false"
                    android:background="@drawable/edittext_gray_light_bg"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/income_type_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/income_type"
                    android:textSize="16sp"
                    android:layout_marginTop="16dp"
                    android:textColor="#1F1F39"
                    android:fontFamily="@font/din_medium"/>

                <RelativeLayout
                    android:id="@+id/income_type_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_gray_light_bg"
                    android:layout_marginTop="16dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/income_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:padding="16dp"
                        android:text="@string/income_type"
                        android:fontFamily="@font/din_regular"
                        android:includeFontPadding="false"
                        android:gravity="right"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@+id/ic_income_type"
                        android:background="@null"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ic_income_type"
                        android:layout_width="8dp"
                        android:layout_height="4dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:src="@drawable/ic_down_arrow_blue"/>


                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/transaction_type_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/transaction_type"
                        android:textSize="16sp"
                        android:textColor="#1F1F39"
                        android:fontFamily="@font/din_medium"/>

                    <RelativeLayout
                        android:id="@+id/transaction_type_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_gray_light_bg"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/transaction_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:padding="16dp"
                            android:text="@string/transaction_type"
                            android:fontFamily="@font/din_regular"
                            android:includeFontPadding="false"
                            android:gravity="right"
                            android:layout_marginLeft="16dp"
                            android:layout_toRightOf="@+id/ic_transaction_type"
                            android:background="@null"/>

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ic_transaction_type"
                            android:layout_width="8dp"
                            android:layout_height="4dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="16dp"
                            android:src="@drawable/ic_down_arrow_blue"/>


                    </RelativeLayout>

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/notes"
                    android:textSize="16sp"
                    android:textColor="#1F1F39"
                    android:fontFamily="@font/din_medium"/>

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/notes"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="10dp"
                    android:padding="20dp"
                    android:gravity="right|top"
                    android:fontFamily="@font/din_regular"
                    android:includeFontPadding="false"
                    android:background="@drawable/edittext_gray_light_bg"/>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:padding="10dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/din_medium"
                android:textSize="15sp"
                android:layout_marginTop="16dp"
                android:text="@string/save"/>


        </LinearLayout>


    </ScrollView>


</LinearLayout>